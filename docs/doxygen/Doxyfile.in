# Doxygen configuration for Roguelike Game Engine (generated by CMake)

# Project metadata
PROJECT_NAME           = @DOXYGEN_PROJECT_NAME@
PROJECT_NUMBER         = @DOXYGEN_PROJECT_VERSION@
OUTPUT_DIRECTORY       = @DOXYGEN_OUTPUT_DIR@

# Input
INPUT                  = @DOXYGEN_INPUT_DIR@ ../docs ../docs/overview
FILE_PATTERNS          = *.c *.h *.cpp *.hpp
RECURSIVE              = YES
EXCLUDE_PATTERNS       = */build/* */tests/*/*.tmp

# Build
QUIET                  = NO
WARN_IF_UNDOCUMENTED   = NO
EXTRACT_ALL            = NO
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
JAVADOC_AUTOBRIEF      = YES
MULTILINE_CPP_IS_BRIEF = YES
ALIASES                = "ingroup2=\\ingroup" "note=\\par Note:\n" "warning=\\par Warning:\n"

# Source browsing
SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES
REFERENCES_LINK_SOURCE = YES
VERBATIM_HEADERS       = YES
FULL_PATH_NAMES        = NO
STRIP_FROM_PATH        = src

# Diagrams (Graphviz)
HAVE_DOT               = YES
DOT_IMAGE_FORMAT       = svg
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
COLLABORATION_GRAPH    = YES
INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES
DIRECTORY_GRAPH        = YES
DOT_MULTI_TARGETS      = YES
DOT_TRANSPARENT        = YES
DOT_UML_DETAILS        = YES
DOT_GRAPH_MAX_NODES    = 50

# HTML output
GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_EXTRA_STYLESHEET  = @CMAKE_CURRENT_SOURCE_DIR@/docs/templates/theme.css
SEARCHENGINE           = YES
GENERATE_TREEVIEW      = YES
ALPHABETICAL_INDEX     = YES
USE_MDFILE_AS_MAINPAGE = ../docs/overview/index.md

# LaTeX/PDF output
GENERATE_LATEX         = YES
LATEX_OUTPUT           = latex
PDF_HYPERLINKS         = YES
USE_PDFLATEX           = YES
LATEX_BATCHMODE        = YES

# XML for post-processing
GENERATE_XML           = YES
XML_OUTPUT             = xml

# Warnings
WARN_IF_DOC_ERROR      = YES
WARN_LOGFILE           = doxygen_warnings.log
